{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules"]
}
